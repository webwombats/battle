generator prisma_client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Battle {
  id          String @id @default(cuid())
  description String

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id       String   @id @default(cuid())
  userName String   @unique
  email    String   @unique
  password String
  fullName String
  battles  Battle[]
}
